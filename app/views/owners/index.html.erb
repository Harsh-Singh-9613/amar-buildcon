<%- model_class = Owner -%>
<div class="page-header">
  <div class="pull-right">
    <%= link_to t('.new', :default => t("helpers.links.new")),
              new_owner_path,
              :class => 'btn btn-primary' %>
  </div>
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>

        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:mobile_number) %></th>
        <th><%= model_class.human_attribute_name(:balance) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th> 
      </tr>
    </thead>
    <tbody>
      <% @owners.each do |owner| %>
        <tr>
          <td><%= link_to owner.name.titleize, owner_path(owner) %></td>
          <td><%= owner.mobile_number %></td>
          <td><%= owner.balance %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),edit_owner_path(owner), :class => 'btn btn-default btn-xs' %>
            <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        owner_path(owner),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


