<%= form_for @owner, :html => { :class => "form-horizontal professor" } do |f| %>

  <%#= render "shared/error",object: @professor%>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :mobile_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :mobile_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:mobile_number) %>
  </div>
  
  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                owners_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
