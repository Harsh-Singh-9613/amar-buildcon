<% @employees.each do |employee| %>
  <tr>
    <td><%= link_to employee.name.titleize, employee_path(employee) %></td>
    <td><%= employee.license_number %></td>
    <td><%= employee.adhaar_number %></td>
    <td><%= employee.mobile_number %></td>
    <td><%= employee.salary %></td>
    <td><%= employee.designation %></td>
    <td>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),edit_employee_path(employee), :class => 'btn btn-default btn-xs' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  employee_path(employee),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-xs btn-danger' %>
      <%= link_to "Make Payment",new_employee_payment_record_path(employee), :class => 'btn btn-default btn-xs' %>

    </td>
  </tr>
<% end %>